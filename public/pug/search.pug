include _auto-generated/_-all
include includes/_mixins
#search.search
    script.
        window.PetAdoption = {
            domain: "!{echo("get_option('pet_adoption_domain')")}",
            contactInfo: {
                tel: "!{echo("get_option('pet_adoption_tel')")}",
                email: "!{echo("get_option('pet_adoption_email')")}",
                web: "!{echo("get_option('pet_adoption_web')")}"
            }
        };
    .search-heading
        h1.search-heading__text
    .search-preview
        .search-preview__wrap
    .search-cta
        h3.search-cta__text #[span()!=_e('Ready to adopt?')] #[a(href!='tel:'+echo("get_option('pet_adoption_tel')"))!=echo("get_option('pet_adoption_tel')")]
    .search__wrap
        form.search__form(action!='#!')
            .image
                :php
                    $image_id = get_option('pet_adoption_image');
                    $image_url = '';
                    if (isset($image_id)){
                        $image_url = wp_get_attachment_url($image_id);
                    };
                .image__placeholder(style!=bgFromURL("$image_url"))
            .instructions
                h5.instructions__heading!=_e('Instructions')
                p.instructions__content!=echo("get_option('pet_adoption_instructions')")
            .search-fields
                .search-fields__wrap
                    .advanced-options
                        .advanced-options__wrap
                            button.button.button--advanced-options.usa-button-primary-alt(href!="#")!=_e('Advanced Options')
                            .advanced-options-view
                                .button.button--close(data-remodal-action="close", class="remodal-close")
                                .advanced-options-view__wrap
                                button.remodal-confirm.usa-button-primary(data-remodal-action="confirm")!=_e('OK')
                                button.remodal-cancel.usa-button-secondary(data-remodal-action="cancel")!=_e("Cancel")
                    +type-field()
            .button.button--submit
                input.button__input(type='submit', value='Search')
    .search-chips
    .search-results
        .search-results__wrap
