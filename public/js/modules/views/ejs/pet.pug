include _auto-generated/_-all
.pet__container
    .pet__wrap
        .pet-name
            h2.pet-name__text!="<%= model.get('petName') || 'N/A' %>"
        -
            var fallbackPhotoUrl = 'https://placehold.it/480x480';
            var petPhotoUrl = "<%= (model.get('images').length > 0) ? model.get('images')[0] : '' %>";
            var speciesPhotoUrl = "<%= apiDomain %>/images/placeholders/<%= model.get('species') %>.png";
            var petPhotoStyleAttr = "background-image:  url('"+petPhotoUrl + "'), url('" + speciesPhotoUrl + "'), url('" + fallbackPhotoUrl + "');"
        .pet-photo(style!=petPhotoStyleAttr)
        .pet-info
            .pet-info__wrap
                .pet-info-breed
                    p.pet-info-breed__text!="<%= model.get('breed') %>"
                .pet-info-size
                    p.pet-info-size__text!="<%= model.get('size') %>"
                .pet-info-sex
                    p.pet-info-sex__text!="<%= model.get('sex') %>"
        .pet-details
            .pet-details__wrap
        button.button.button--more-info.usa-button-primary-alt(href!="#<%= model.get('petId') %>") More Info
